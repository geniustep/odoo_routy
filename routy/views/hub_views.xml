<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Hub List View -->
    <record id="view_hub_list" model="ir.ui.view">
        <field name="name">routy.hub.list</field>
        <field name="model">routy.hub</field>
        <field name="arch" type="xml">
            <list string="Hubs" decoration-muted="not is_active">
                <field name="name"/>
                <field name="code"/>
                <field name="hub_type"/>
                <field name="city"/>
                <field name="manager_id"/>
                <field name="current_load"/>
                <field name="max_capacity"/>
                <field name="load_percentage" widget="progressbar"/>
                <field name="is_active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Hub Form View -->
    <record id="view_hub_form" model="ir.ui.view">
        <field name="name">routy.hub.form</field>
        <field name="model">routy.hub</field>
        <field name="arch" type="xml">
            <form string="Hub">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_parcels" type="object"
                                class="oe_stat_button" icon="fa-cube">
                            <field name="parcel_count" widget="statinfo" string="Parcels"/>
                        </button>
                        <button name="action_view_jobs" type="object"
                                class="oe_stat_button" icon="fa-tasks">
                            <field name="active_job_count" widget="statinfo" string="Active Jobs"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Hub Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="hub_type"/>
                            <field name="manager_id"/>
                            <field name="partner_id"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="max_capacity"/>
                            <field name="current_load"/>
                            <field name="load_percentage" widget="progressbar"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Location">
                            <group>
                                <group>
                                    <field name="address"/>
                                    <field name="city"/>
                                    <field name="zip"/>
                                </group>
                                <group>
                                    <field name="state_id"/>
                                    <field name="country_id"/>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                </group>
                            </group>
                        </page>
                        <page string="Operating Hours">
                            <group>
                                <field name="operating_hours_start" widget="float_time"/>
                                <field name="operating_hours_end" widget="float_time"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Hub Kanban View -->
    <record id="view_hub_kanban" model="ir.ui.view">
        <field name="name">routy.hub.kanban</field>
        <field name="model">routy.hub</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="code"/>
                <field name="hub_type"/>
                <field name="image"/>
                <field name="is_active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('routy.hub', 'image', record.id.raw_value)" alt="Hub"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>
                                    <field name="code"/> - <field name="hub_type"/>
                                </div>
                                <div t-if="record.city.raw_value">
                                    <i class="fa fa-map-marker"/> <field name="city"/>
                                </div>
                                <div>
                                    <field name="load_percentage" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Hub Search View -->
    <record id="view_hub_search" model="ir.ui.view">
        <field name="name">routy.hub.search</field>
        <field name="model">routy.hub</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="city"/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('is_active', '=', False)]"/>
                <separator/>
                <filter string="Main Hub" name="main" domain="[('hub_type', '=', 'main')]"/>
                <filter string="Distribution Center" name="distribution" domain="[('hub_type', '=', 'distribution')]"/>
                <filter string="Micro Hub" name="micro" domain="[('hub_type', '=', 'micro')]"/>
                <group expand="0" string="Group By">
                    <filter string="Hub Type" name="group_hub_type" context="{'group_by': 'hub_type'}"/>
                    <filter string="City" name="group_city" context="{'group_by': 'city'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Hub Action -->
    <record id="action_hub" model="ir.actions.act_window">
        <field name="name">Hubs</field>
        <field name="res_model">routy.hub</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first hub!
            </p>
            <p>
                Hubs are distribution centers where parcels are processed.
            </p>
        </field>
    </record>

</odoo>
