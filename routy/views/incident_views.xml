<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Incident List View -->
    <record id="view_incident_list" model="ir.ui.view">
        <field name="name">routy.incident.list</field>
        <field name="model">routy.incident</field>
        <field name="arch" type="xml">
            <list string="Incidents"
                  decoration-danger="severity == 'critical'"
                  decoration-warning="severity == 'high'"
                  decoration-success="state == 'closed'">
                <field name="name"/>
                <field name="title"/>
                <field name="incident_type"/>
                <field name="severity" widget="badge"/>
                <field name="priority" widget="priority"/>
                <field name="driver_id"/>
                <field name="service_request_id"/>
                <field name="reported_at"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'investigating'"
                       decoration-success="state == 'resolved'"
                       decoration-muted="state == 'closed'"/>
            </list>
        </field>
    </record>

    <!-- Incident Form View -->
    <record id="view_incident_form" model="ir.ui.view">
        <field name="name">routy.incident.form</field>
        <field name="model">routy.incident</field>
        <field name="arch" type="xml">
            <form string="Incident">
                <header>
                    <button name="action_investigate" string="Start Investigation" type="object"
                            class="oe_highlight" invisible="state != 'reported'"/>
                    <button name="action_resolve" string="Resolve" type="object"
                            class="oe_highlight" invisible="state not in ('reported', 'investigating')"/>
                    <button name="action_close" string="Close" type="object"
                            invisible="state != 'resolved'"/>
                    <button name="action_reopen" string="Reopen" type="object"
                            invisible="state not in ('resolved', 'closed')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="reported,investigating,resolved,closed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_attachments" type="object"
                                class="oe_stat_button" icon="fa-paperclip">
                            <field name="attachment_count" widget="statinfo" string="Attachments"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <h2>
                            <field name="title" placeholder="Incident Title"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="incident_type"/>
                            <field name="severity" widget="badge"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="reported_by_id"/>
                            <field name="reported_at"/>
                            <field name="financial_impact"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details">
                            <group>
                                <field name="description" nolabel="1" placeholder="Detailed description of the incident..."/>
                            </group>
                        </page>
                        <page string="Related Records">
                            <group>
                                <group>
                                    <field name="service_request_id"/>
                                    <field name="parcel_id" domain="[('service_request_id', '=', service_request_id)]"/>
                                </group>
                                <group>
                                    <field name="job_id"/>
                                    <field name="driver_id"/>
                                    <field name="customer_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Location">
                            <group>
                                <group>
                                    <field name="incident_location"/>
                                </group>
                                <group>
                                    <field name="incident_lat"/>
                                    <field name="incident_lng"/>
                                </group>
                            </group>
                        </page>
                        <page string="Resolution" invisible="state == 'reported'">
                            <group>
                                <group>
                                    <field name="resolved_by_id"/>
                                    <field name="resolved_at"/>
                                    <field name="closed_at"/>
                                </group>
                            </group>
                            <group>
                                <field name="resolution_notes" nolabel="1" placeholder="Resolution notes..."/>
                            </group>
                            <separator string="Action Taken"/>
                            <field name="action_taken" nolabel="1" placeholder="Describe actions taken..."/>
                            <separator string="Preventive Measures"/>
                            <field name="preventive_measures" nolabel="1" placeholder="Preventive measures..."/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                        <page string="Tags">
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Incident Kanban View -->
    <record id="view_incident_kanban" model="ir.ui.view">
        <field name="name">routy.incident.kanban</field>
        <field name="model">routy.incident</field>
        <field name="arch" type="xml">
            <kanban default_group_by="incident_type" class="o_kanban_small_column">
                <field name="name"/>
                <field name="title"/>
                <field name="incident_type"/>
                <field name="severity"/>
                <field name="state"/>
                <field name="priority"/>
                <progressbar field="state" colors='{"resolved": "success", "investigating": "warning", "reported": "danger"}'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="title"/>
                                        </strong>
                                        <div>
                                            <field name="name"/>
                                        </div>
                                    </div>
                                    <span class="float-end">
                                        <field name="priority" widget="priority"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="severity" widget="badge"/>
                                    <div t-if="record.driver_id.raw_value">
                                        <i class="fa fa-user"/> <field name="driver_id"/>
                                    </div>
                                    <div t-if="record.service_request_id.raw_value">
                                        <i class="fa fa-file-text-o"/> <field name="service_request_id"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="label"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Incident Search View -->
    <record id="view_incident_search" model="ir.ui.view">
        <field name="name">routy.incident.search</field>
        <field name="model">routy.incident</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="title"/>
                <field name="driver_id"/>
                <field name="service_request_id"/>
                <filter string="Reported" name="reported" domain="[('state', '=', 'reported')]"/>
                <filter string="Investigating" name="investigating" domain="[('state', '=', 'investigating')]"/>
                <filter string="Resolved" name="resolved" domain="[('state', '=', 'resolved')]"/>
                <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                <separator/>
                <filter string="Critical" name="critical" domain="[('severity', '=', 'critical')]"/>
                <filter string="High" name="high" domain="[('severity', '=', 'high')]"/>
                <separator/>
                <filter string="Today" name="today"
                        domain="[('reported_at', '&gt;=', datetime.datetime.now().strftime('%Y-%m-%d 00:00:00'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'incident_type'}"/>
                    <filter string="Severity" name="group_severity" context="{'group_by': 'severity'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Driver" name="group_driver" context="{'group_by': 'driver_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Incident Action -->
    <record id="action_incident" model="ir.actions.act_window">
        <field name="name">Incidents</field>
        <field name="res_model">routy.incident</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_investigating': 1, 'search_default_reported': 1}</field>
    </record>

    <!-- Incident Tag List View -->
    <record id="view_incident_tag_list" model="ir.ui.view">
        <field name="name">routy.incident.tag.list</field>
        <field name="model">routy.incident.tag</field>
        <field name="arch" type="xml">
            <list string="Incident Tags" editable="bottom">
                <field name="name"/>
                <field name="color" widget="color_picker"/>
            </list>
        </field>
    </record>

    <!-- Incident Tag Action -->
    <record id="action_incident_tag" model="ir.actions.act_window">
        <field name="name">Incident Tags</field>
        <field name="res_model">routy.incident.tag</field>
        <field name="view_mode">list</field>
    </record>

</odoo>
