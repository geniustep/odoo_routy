<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Linehaul List View -->
    <record id="view_linehaul_list" model="ir.ui.view">
        <field name="name">routy.linehaul.list</field>
        <field name="model">routy.linehaul</field>
        <field name="arch" type="xml">
            <list string="Linehauls"
                  decoration-info="state == 'confirmed'"
                  decoration-warning="state == 'in_transit'"
                  decoration-success="state == 'arrived'">
                <field name="name"/>
                <field name="departure_hub_id"/>
                <field name="arrival_hub_id"/>
                <field name="driver_id"/>
                <field name="scheduled_departure"/>
                <field name="scheduled_arrival"/>
                <field name="parcel_count"/>
                <field name="total_weight"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Linehaul Form View -->
    <record id="view_linehaul_form" model="ir.ui.view">
        <field name="name">routy.linehaul.form</field>
        <field name="model">routy.linehaul</field>
        <field name="arch" type="xml">
            <form string="Linehaul">
                <header>
                    <button name="action_confirm" string="Confirm" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_depart" string="Depart" type="object"
                            class="oe_highlight" invisible="state != 'confirmed'"/>
                    <button name="action_arrive" string="Arrive" type="object"
                            class="oe_highlight" invisible="state != 'in_transit'"/>
                    <button name="action_cancel" string="Cancel" type="object"
                            invisible="state == 'arrived'"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,confirmed,in_transit,arrived"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_parcels" type="object"
                                class="oe_stat_button" icon="fa-cube">
                            <field name="parcel_count" widget="statinfo" string="Parcels"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="departure_hub_id"/>
                            <field name="arrival_hub_id"/>
                            <field name="driver_id"/>
                            <field name="vehicle_id"/>
                        </group>
                        <group>
                            <field name="distance_km"/>
                            <field name="total_weight"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Schedule">
                            <group>
                                <group string="Scheduled">
                                    <field name="scheduled_departure"/>
                                    <field name="scheduled_arrival"/>
                                    <field name="estimated_duration_hours" widget="float_time"/>
                                </group>
                                <group string="Actual">
                                    <field name="actual_departure"/>
                                    <field name="actual_arrival"/>
                                    <field name="duration_hours" widget="float_time"/>
                                </group>
                            </group>
                        </page>
                        <page string="Parcels">
                            <field name="parcel_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="service_request_id"/>
                                    <field name="weight"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        <page string="Costs">
                            <group>
                                <field name="fuel_cost"/>
                                <field name="driver_cost"/>
                                <field name="other_costs"/>
                                <field name="total_cost"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Linehaul Search View -->
    <record id="view_linehaul_search" model="ir.ui.view">
        <field name="name">routy.linehaul.search</field>
        <field name="model">routy.linehaul</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="departure_hub_id"/>
                <field name="arrival_hub_id"/>
                <field name="driver_id"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="In Transit" name="in_transit" domain="[('state', '=', 'in_transit')]"/>
                <filter string="Arrived" name="arrived" domain="[('state', '=', 'arrived')]"/>
                <group expand="0" string="Group By">
                    <filter string="Departure Hub" name="group_departure" context="{'group_by': 'departure_hub_id'}"/>
                    <filter string="Arrival Hub" name="group_arrival" context="{'group_by': 'arrival_hub_id'}"/>
                    <filter string="Driver" name="group_driver" context="{'group_by': 'driver_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Linehaul Action -->
    <record id="action_linehaul" model="ir.actions.act_window">
        <field name="name">Linehauls</field>
        <field name="res_model">routy.linehaul</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_in_transit': 1, 'search_default_confirmed': 1}</field>
    </record>

</odoo>
