<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Partner Contract List View -->
    <record id="view_partner_contract_list" model="ir.ui.view">
        <field name="name">routy.partner_contract.list</field>
        <field name="model">routy.partner_contract</field>
        <field name="arch" type="xml">
            <list string="Partner Contracts"
                  decoration-success="state == 'active'"
                  decoration-muted="state in ('expired', 'terminated')">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="partner_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="actual_performance" widget="progressbar"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- Partner Contract Form View -->
    <record id="view_partner_contract_form" model="ir.ui.view">
        <field name="name">routy.partner_contract.form</field>
        <field name="model">routy.partner_contract</field>
        <field name="arch" type="xml">
            <form string="Partner Contract">
                <header>
                    <button name="action_activate" string="Activate" type="object"
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_terminate" string="Terminate" type="object"
                            invisible="state not in ('active', 'draft')"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,active"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_deliveries" type="object"
                                class="oe_stat_button" icon="fa-truck">
                            <field name="total_deliveries" widget="statinfo" string="Deliveries"/>
                        </button>
                        <button name="action_view_performance" type="object"
                                class="oe_stat_button" icon="fa-line-chart">
                            <div class="o_stat_info">
                                <field name="actual_performance" class="o_stat_value"/>
                                <span class="o_stat_text">Performance</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="partner_type"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Financial Terms">
                            <group>
                                <group>
                                    <field name="rate_per_km"/>
                                    <field name="rate_per_delivery"/>
                                    <field name="minimum_guarantee"/>
                                </group>
                            </group>
                        </page>
                        <page string="Performance">
                            <group>
                                <group>
                                    <field name="sla_target" widget="progressbar"/>
                                    <field name="actual_performance" widget="progressbar"/>
                                    <field name="performance_score" widget="badge"/>
                                </group>
                                <group>
                                    <field name="total_deliveries"/>
                                    <field name="successful_deliveries"/>
                                    <field name="total_distance_km"/>
                                </group>
                            </group>
                        </page>
                        <page string="Contract Document">
                            <group>
                                <field name="contract_file" filename="contract_filename"/>
                                <field name="contract_filename" invisible="1"/>
                            </group>
                        </page>
                        <page string="Terms &amp; Conditions">
                            <field name="terms" widget="html"/>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Partner Contract Search View -->
    <record id="view_partner_contract_search" model="ir.ui.view">
        <field name="name">routy.partner_contract.search</field>
        <field name="model">routy.partner_contract</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Expired" name="expired" domain="[('state', '=', 'expired')]"/>
                <separator/>
                <filter string="Carrier" name="carrier" domain="[('partner_type', '=', 'carrier')]"/>
                <filter string="Freelancer" name="freelancer" domain="[('partner_type', '=', 'freelancer')]"/>
                <filter string="Hub Partner" name="hub" domain="[('partner_type', '=', 'hub')]"/>
                <group expand="0" string="Group By">
                    <filter string="Partner" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Partner Type" name="group_partner_type" context="{'group_by': 'partner_type'}"/>
                    <filter string="State" name="group_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Partner Contract Action -->
    <record id="action_partner_contract" model="ir.actions.act_window">
        <field name="name">Partner Contracts</field>
        <field name="res_model">routy.partner_contract</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>

</odoo>
