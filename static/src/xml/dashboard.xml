<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="routy.Dashboard" owl="1">
        <div class="o_routy_dashboard">
            <div class="container-fluid p-4">

                <!-- Header -->
                <div class="row mb-4">
                    <div class="col-12">
                        <h2 class="mb-0">Routy Dashboard</h2>
                        <p class="text-muted">Overview of your delivery operations</p>
                    </div>
                </div>

                <!-- KPI Cards Row -->
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card border-start border-primary border-4 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                            Today's Requests
                                        </div>
                                        <div class="h4 mb-0 fw-bold text-gray-800">
                                            <span class="today_requests">0</span>
                                        </div>
                                    </div>
                                    <div>
                                        <i class="fa fa-clipboard fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card border-start border-success border-4 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                            Today's Deliveries
                                        </div>
                                        <div class="h4 mb-0 fw-bold text-gray-800">
                                            <span class="today_deliveries">0</span>
                                        </div>
                                    </div>
                                    <div>
                                        <i class="fa fa-check-circle fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card border-start border-info border-4 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-xs fw-bold text-info text-uppercase mb-1">
                                            Active Drivers
                                        </div>
                                        <div class="h4 mb-0 fw-bold text-gray-800">
                                            <span class="active_drivers">0</span>
                                        </div>
                                    </div>
                                    <div>
                                        <i class="fa fa-users fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card border-start border-warning border-4 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                            Today's Revenue
                                        </div>
                                        <div class="h4 mb-0 fw-bold text-gray-800">
                                            <span class="currency_symbol"></span>
                                            <span class="today_revenue">0</span>
                                        </div>
                                    </div>
                                    <div>
                                        <i class="fa fa-dollar fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Second Row -->
                <div class="row">
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card border-start border-danger border-4 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-xs fw-bold text-danger text-uppercase mb-1">
                                            Pending Parcels
                                        </div>
                                        <div class="h4 mb-0 fw-bold text-gray-800">
                                            <span class="pending_parcels">0</span>
                                        </div>
                                    </div>
                                    <div>
                                        <i class="fa fa-box fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card border-start border-success border-4 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                            Success Rate (Week)
                                        </div>
                                        <div class="h4 mb-0 fw-bold text-gray-800">
                                            <span class="success_rate">0</span>%
                                        </div>
                                    </div>
                                    <div>
                                        <i class="fa fa-chart-line fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card border-start border-warning border-4 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <div class="text-xs fw-bold text-warning text-uppercase mb-1">
                                            Open Incidents
                                        </div>
                                        <div class="h4 mb-0 fw-bold text-gray-800">
                                            <span class="open_incidents">0</span>
                                        </div>
                                    </div>
                                    <div>
                                        <i class="fa fa-exclamation-triangle fa-2x text-gray-300"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Row -->
                <div class="row mt-4">
                    <div class="col-lg-8 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white py-3">
                                <h6 class="m-0 fw-bold text-primary">Deliveries - Last 7 Days</h6>
                            </div>
                            <div class="card-body">
                                <div style="height: 300px;">
                                    <canvas id="deliveriesChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4 mb-4">
                        <div class="card shadow-sm">
                            <div class="card-header bg-white py-3">
                                <h6 class="m-0 fw-bold text-primary">Top Drivers (This Month)</h6>
                            </div>
                            <div class="card-body">
                                <div class="top_drivers_list">
                                    <p class="text-muted text-center">Loading...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </t>

</templates>
